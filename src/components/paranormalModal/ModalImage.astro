---
import {Image} from 'astro:assets';
import {modalImagesDirectory} from '../../utils/modalImagesDirectory';

const { siteId } = Astro.props as { siteId: keyof typeof modalImagesDirectory };
---
<div class="modal-main-image">
  <Image src={modalImagesDirectory[siteId]} alt="Paranormal Image" class={""} />
  <div id="close-icon">
    <svg width="32px" height="32px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M5.29289 5.29289C5.68342 4.90237 6.31658 4.90237 6.70711 5.29289L12 10.5858L17.2929 5.29289C17.6834 4.90237 18.3166 4.90237 18.7071 5.29289C19.0976 5.68342 19.0976 6.31658 18.7071 6.70711L13.4142 12L18.7071 17.2929C19.0976 17.6834 19.0976 18.3166 18.7071 18.7071C18.3166 19.0976 17.6834 19.0976 17.2929 18.7071L12 13.4142L6.70711 18.7071C6.31658 19.0976 5.68342 19.0976 5.29289 18.7071C4.90237 18.3166 4.90237 17.6834 5.29289 17.2929L10.5858 12L5.29289 6.70711C4.90237 6.31658 4.90237 5.68342 5.29289 5.29289Z" fill="#fefefe"></path> </g></svg>
  </div>
</div>

<style>
  .modal-main-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    position: relative;
  }

    .modal-main-image #close-icon {
    position: absolute;
    display: grid;
    place-content: center;
    top: 16px;
    right: 16px;
    cursor: pointer;
    width: 48px;
    height: 48px;
    background-color: #0003;
    border-radius: 50%;
  }

  .modal-main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>