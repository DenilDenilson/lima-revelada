const { site } = Astro.props;
const { fuentes } = site
---

<section class="modal-fuentes">
  <h2 class="modal-fuentes-title">Fuentes</h2>
  <ul class="modal-fuentes-list">
    {
      fuentes.map((fuente: any) => (
