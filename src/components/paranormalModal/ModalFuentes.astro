<style>
  .modal-fuentes {
    padding-top: 24px;
    padding-bottom: 32px;
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
  }

  .modal-fuentes-title {
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 16px;
  }

  .modal-fuentes-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    list-style: none;
  }

  .modal-fuentes-item {
    background-color: #f9fafb;
    border-radius: 8px;
    display: flex;
    align-items: start;
    padding: 12px;
    color: #4b5563;
    gap: 12px;
  }

  .modal-fuentes-item svg {
    margin-top: 2px;
  }
  .modal-fuentes-item a {
    cursor: pointer;
    text-decoration: none;
    font-size: 1rem;
    line-height: 1.5rem;
    font-weight: 500;
    color: #2563eb;
  }
  
  .modal-fuentes-item span {
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 400;
    color: #4b5563;
  }

  .modal-fuentes-content {
    display: flex;
    flex-direction: column;
    align-items: start;
    flex: 1;
    gap: 4px;
  }
</style>