---
import { Image } from "astro:assets";
import BalconMasLargo from "../../assets/OptimizedImages/espaciosSingulares/singular-01-BalconMasLargo.webp"

import Layout from "../../pages/Layout.astro";
import { modalImagesDirectory } from "../../utils/modalImagesDirectory";

const { site } = Astro.props;
const { id } = site.data as {id: keyof typeof modalImagesDirectory };
---
<!-- <Layout> -->
  <!-- <div class="modal-container"> -->
    <!-- <div class="container"> -->
      <div class="modal">
        <div class="modal-main-image">
          <Image src={modalImagesDirectory[id]} alt="Curioso Image" class={""} />
          <div id="close-icon">
            <svg width="32px" height="32px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M5.29289 5.29289C5.68342 4.90237 6.31658 4.90237 6.70711 5.29289L12 10.5858L17.2929 5.29289C17.6834 4.90237 18.3166 4.90237 18.7071 5.29289C19.0976 5.68342 19.0976 6.31658 18.7071 6.70711L13.4142 12L18.7071 17.2929C19.0976 17.6834 19.0976 18.3166 18.7071 18.7071C18.3166 19.0976 17.6834 19.0976 17.2929 18.7071L12 13.4142L6.70711 18.7071C6.31658 19.0976 5.68342 19.0976 5.29289 18.7071C4.90237 18.3166 4.90237 17.6834 5.29289 17.2929L10.5858 12L5.29289 6.70711C4.90237 6.31658 4.90237 5.68342 5.29289 5.29289Z" fill="#fefefe"></path> </g></svg>
          </div>
        </div>
        <div class="modal-content">
          <hgroup class="modal-content-header">
            <span class="modal-kind curioso">{site.data.kind}</span>
            <h1 class="modal-title">{site.data.title}</h1>
            <p class="modal-direction">
              <svg width="16px" height="16px" viewBox="0 0 24 24" id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><defs><style>.cls-1{fill:none;stroke:#4b5563;stroke-miterlimit:10;stroke-width:1.91px;}</style></defs><path class="cls-1" d="M19.64,9.14C19.64,15.82,12,22.5,12,22.5S4.36,15.82,4.36,9.14a7.64,7.64,0,0,1,15.28,0Z"></path><circle class="cls-1" cx="12" cy="9.14" r="2.86"></circle></g></svg>
              {site.data.direction}
            </p>
          </hgroup>
          <section class="modal-curiosity">
            {site.data.singularidad}
          </section>
          <section class="modal-fuentes">
            <h2 class="modal-fuentes-title">Fuentes</h2>
            <ul class="modal-fuentes-list">
              {
                site.data.fuentes.map((fuente: any) => (
                  <li class="modal-fuentes-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link w-4 h-4 text-gray-500 mt-1 flex-shrink-0">
                      <path d="M15 3h6v6"></path>
                      <path d="M10 14 21 3"></path>
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    </svg>
                    <div class="modal-fuentes-content">
                      <a href={fuente.url} target="_blank">{fuente.title}</a>
                    </div>
                  </li>
                ))
              }
              <!-- <li class="modal-fuentes-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link w-4 h-4 text-gray-500 mt-1 flex-shrink-0">
                  <path d="M15 3h6v6"></path>
                  <path d="M10 14 21 3"></path>
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                </svg>
                <div class="modal-fuentes-content">
                  <a href="#" target="_blank">fuente.title</a>
                </div>
              </li> -->
            </ul>
          </section>
          <footer class="modal-footer">
            Lima Revelada - Descubre los misterios de nuestra ciudad
          </footer>
        </div>
      </div>
    <!-- </div> -->
  <!-- </div> -->
<!-- </Layout> -->


<style>
.modal-container {
    background: red;
    min-height: 100vh;
    position: absolute;
		z-index: 50;
		inset: 0;
    place-content: center;
	}

	.container {
    background-color: black;
    backdrop-filter: blur(2px);
    height: 100vh;
    display: grid;
    place-content: center;
  }

  .modal {
    overflow-y: auto;
    background: #fefefe;
    width: 80vw;
    max-width: 640px;
    border-radius: 8px;
    margin-top: 64px;
    margin-bottom: 64px;
  }

  .modal::-webkit-scrollbar {
    width: 4px;
    height: 4px;
  }

  .modal::-webkit-scrollbar-track {
    background: transparent;
  }

  .modal-main-image {
    width: 100%;
    aspect-ratio: 1 / 1;
    position: relative;
  }

    .modal-main-image #close-icon {
    position: absolute;
    display: grid;
    place-content: center;
    top: 16px;
    right: 16px;
    cursor: pointer;
    width: 48px;
    height: 48px;
    background-color: #0003;
    border-radius: 50%;
  }

  .modal-main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 50%;
  }

  .modal-content {
    padding: 24px;
  }

/* MODAL FOOTER */

  .modal-footer {
    margin-top: 24px;
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 400;
    color: #6b7280;
    text-align: center;
  }

  /* MODAL HEADER */
  .modal-content-header {
    margin-bottom: 24px;
  }

  .modal-kind {
    font-size: smaller;
    font-weight: 600;
    padding: 2px 12px;
    border-radius: 8px;
    margin-bottom: 12px;
    display: inline-block;
  }

  .curioso {
    background: #FFF9DC;
    color: #9A6C00;
  }

  .modal-title {
    font-size: 2.25rem;
    line-height: 2.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 8px;
  }

  .modal-direction {
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 500;
    color: #4b5563
  }

/* CURIOSITY CARD */

  .modal-curiosity {
    border-left: 4px solid #3b82f6;
    background-color: #eef4fe;
    color: #1e2936;
    font-weight: 600;
    font-size: 1.125rem;
    line-height: 1.625rem;
    padding: 24px;
    border-radius: 12px;
    margin-bottom: 24px;
  }

  /* FUENTES */

  .modal-fuentes {
    padding-top: 24px;
    padding-bottom: 32px;
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
  }

  .modal-fuentes-title {
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 16px;
  }

  .modal-fuentes-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    list-style: none;
  }

  .modal-fuentes-item {
    background-color: #f9fafb;
    border-radius: 8px;
    display: flex;
    align-items: start;
    padding: 12px;
    color: #4b5563;
    gap: 12px;
  }

  .modal-fuentes-item svg {
    margin-top: 2px;
  }
  .modal-fuentes-item a {
    cursor: pointer;
    text-decoration: none;
    font-size: 1rem;
    line-height: 1.5rem;
    font-weight: 500;
    color: #2563eb;
  }
  
  .modal-fuentes-item span {
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 400;
    color: #4b5563;
  }

  .modal-fuentes-content {
    display: flex;
    flex-direction: column;
    align-items: start;
    flex: 1;
    gap: 4px;
  }

  @media (width >= 1200px) {
    .container {
      background-color: blue;
    }

    .modal {
      overflow-y: hidden;
      height: 512px;
      max-width: 1200px;
      display: flex;
      flex-direction: row-reverse;
      justify-content: space-between;
    }

    .modal-main-image {
      width: auto;
      height: 100%;
      aspect-ratio: 1 / 1;
    }

    .modal-content {
      padding: 48px;
      overflow-y: auto;
    }

    .modal-content::-webkit-scrollbar {
      width: 4px;
      height: 4px;
    }

    .modal-content::-webkit-scrollbar-track {
      background: transparent;
    }

    .modal-fuentes {
      padding-top: 24px;
      padding-bottom: 24px;
    }

    .modal-footer {
      margin-top: 12px;
      font-size: smaller;
    }
  }
</style>

